<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alumni">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="422dp"
            android:layout_height="wrap_content"
            android:background="#8BC34A"
            android:fontFamily="@font/acme"
            android:text="Alumni"
            android:textAlignment="center"
            android:textColor="#795548"
            android:textSize="25dp" />
        <LinearLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardElevation="146dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="174dp"
                    android:layout_height="222dp"
                    android:src="@drawable/harsh" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="228dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="180dp"
                        android:fontFamily="@font/acme"
                        android:text="Harsh Pardhi \n Placed at"
                        android:textAlignment="center"
                        android:textSize="35dp" />

                    <ImageView
                        android:layout_width="375dp"
                        android:layout_height="97dp"
                        android:layout_marginLeft="35dp"
                        android:paddingLeft="115dp"
                        android:src="@drawable/hexware" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Companies visit"
            android:textAlignment="center"
            android:fontFamily="@font/acme"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:src="@drawable/tata" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/wipro" />

            <ImageView
                android:layout_width="178dp"
                android:layout_height="136dp"
                android:src="@drawable/siemens" />

            <ImageView
                android:layout_width="204dp"
                android:layout_height="124dp"
                android:src="@drawable/jll" />

        </GridLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:src="@drawable/placements"
            android:fitsSystemWindows="true"
            />




    </LinearLayout>

    </HorizontalScrollView>
</ScrollView>