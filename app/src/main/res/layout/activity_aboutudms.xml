<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aboutudms">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#CDDC39"
            android:fontFamily="@font/amarante"
            android:text="@string/udms"
            android:textAlignment="center"
            android:textColor="#757575"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/amarante"
            android:text="@string/udmsfull"
            android:textAlignment="inherit"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:background="#4CAF50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:orientation="horizontal">

            <ImageView
                android:layout_width="107dp"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:background="#00000000"
                android:contentDescription="Affilated to Bamu"
                android:paddingTop="5dp"
                android:src="@drawable/bamu" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="269dp"
                android:layout_height="33dp"
                android:layout_marginLeft="10dp"
                android:text="Affilated To BAMU, Aurangabad"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="10dp"


                ></TextView>
                <TextView
                    android:layout_width="269dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="10dp"
                    android:text="NAAC A Acrredited 2023-24"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="10dp"


                    ></TextView>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>